#!/usr/bin/env bash
# This script displays "Best School" 10 times, with a special case on the 9th iteration.

# Initialize a counter
counter=1

# Using a while loop to repeat the echo statement until the counter reaches 10
while [ "$counter" -le 10 ]; do
    # Using an if statement to check if it's the 9th iteration
    if [ "$counter" -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((counter++))
done

