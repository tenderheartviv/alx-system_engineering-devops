#!/usr/bin/env bash
# This script displays messages based on the loop iteration.

# Initialize a counter
counter=1

# Using a while loop to repeat the echo statement until the counter reaches 10
while [ "$counter" -le 10 ]; do
    # Using if, elif, and else statements to check the loop iteration
    if [ "$counter" -eq 4 ]; then
        echo "Bad Luck"
    elif [ "$counter" -eq 8 ]; then
        echo "Good Luck"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((counter++))
done

